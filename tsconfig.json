{
  "compilerOptions": {
    "lib": ["ES2020", "ESNext", "dom"],
    "skipLibCheck": true,
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "jsx": "react",
    "paths": {}
  },
  "ts-node": {
    "compilerOptions": {
      "esModuleInterop": true
    }
  }
}
